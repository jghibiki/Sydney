            "initial_state": "pending",
            "info": {

            }
        },
        {
            "type": "step",
            "name": "step_3a",
            "initial_state": "skipped",
            "info": {

            }
        },
        {
            "type": "step",
            "name": "step_3b",
            "initial_state": "pending",
            "info": {

            }
        },
        {
            "type": "step",
            "name": "step_4",
            "initial_state": "pending",
            "info": {

            }
        },

        //Pipeline #2 statews
        {
            "type": "step",
            "name": "likes hamburgers",
            "initial_state": "pending"
        },
        {
            "type": "step",
            "name": "likes hotdogs",
            "initial_state": "pending"
        },
        {
            "type": "step",
            "name": "likes chicken patties",
            "initial_state": "pending"
