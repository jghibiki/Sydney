            "initial_state": "pending"
        },

        {
            "type": "step",
            "name": "eating",
            "initial_state": "pending"
        }


        // Define additional pipeline states here
    ],

    "pipeline": [
        // Pipeline #1
        {
            "step": "step_1",
            "transitions": [
                { "state": "ok", "go_to": "step_2" },
                { "state": "failed", "go_to": "_QUIT_" }
            ]
        },
        {
            "step": "step_2",
            "transitions": [
                { "state": "ok", "go_to": "step_3a" },
                { "state": "failed", "go_to": "step_3b" }
            ]
        },
        {
            "step": "step_3a",
            "transitions": [
                { "state": "ok", "go_to": "step_4"},
                { "state": "failed", "go_to": "_QUIT_"}
            ]
        },
        {
            "step": "step_3b",
            "transitions": [
                { "state": "ok", "go_to": "step_4"},
                { "state": "failed", "go_to": "_QUIT_"}
            ]
        },
        {
            "step": "step_4",
            "transitions": [
                { "state": "ok", "go_to": "_FINISH_"},
