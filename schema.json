{

    "states": [
        // Human-defined states that pipeline steps can be in
        // There are also several system-defined states: 
        // - __FINISHED__ : to indicate a pipeline has finished successfully
        // - __QUIT__ : to indicate a pipeline has completed in a non-successful state.
        {
            "name": "pending",
            "color": "#FFC400"
        },
        {
            "name": "running",
            "color": "#5E89FF"
        },
        {
            "name": "ok",
            "color": "#00cc00"
        },
        {
            "name": "failed",
            "color": "#B05B5B"
        },
        {
            "name": "skipped",
            "color": "#8896A6"
        },

        // Pipeline #2 states
        {
            "name": "yes",
            "color": "#00cc00"
        },
        {
            "name": "no",
            "color": "#B05B5B"
        }
    ],

    "notifications": [
        // List of notification rules
        //  Uses javascript regex to resolve step and state names dynamically
        {
            "step": ".*",
            "state": "failed"
        }
    ],

    "steps": [

        // Pipeline #1 states
        {
